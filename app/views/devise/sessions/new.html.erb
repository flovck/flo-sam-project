

<div class="banner">

 <div class="container">
   <div class="col-xs-12 col-sm-6  col-sm-offset-3">
     <div class="login">
       <h2>Log In</h2>

       <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
         <%= f.error_notification %>

         <div class="form-inputs">
           <%= f.input :email,label: false, placeholder:'Email', required: true, autofocus: true %>
           <%= f.input :password, label: false, placeholder: 'Password', required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
           <%= f.input :remember_me, class: 'checkbox', as: :boolean if devise_mapping.rememberable? %>
           <input type="submit" name="commit" value="Log in" class="btn">
         </div>

       <% end %>
       <hr>
       <%= render "devise/shared/links" %>
     </div>
   </div>
 </div>
</div>

